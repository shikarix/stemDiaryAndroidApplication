<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <color name="custom_theme_color">#ffFFFF</color>

    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/custom_theme_color</item>
        <item name="android:colorBackground">@color/custom_theme_color</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorPrimary">@color/info_background_color</item>
        <item name="colorAccent">@color/info_background_color</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:navigationBarColor">@color/vk_black</item>
        <item name="android:colorBackground">@color/custom_theme_color</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorPrimary">@color/greenButtonColor</item>
        <item name="colorAccent">@color/greenButtonColor</item>
    </style>

    <style name="AppFullScreenTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:title">@string/calendar</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@null</item>
    </style>

</resources>
